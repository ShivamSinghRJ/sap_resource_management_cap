<mvc:View controllerName="sapresourcemanagement.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
     <Page id="page1" title="Capgemini" class="page1" showNavButton="true" navButtonPress="onBack">
         <Panel id="_IDGenPanel2" class = "sapUiResponsiveMargin" width="95%">
            <Table
                id="employeeTable"
                items="{MasterModel>/}"
                >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar5" >
                        <Title id="_IDGenTitle1" text="Employee Details"></Title>
                        <ToolbarSpacer id="_IDGenToolbarSpacer5"  />
                        <Input id="_IDGenInput2" value="" liveChange="filterPressMentor" showValueHelp="true" valueHelpIconSrc="sap-icon://filter" placeholder="Search by Mentor" width="16%" class="sapUiSmallMarginEnd" />
                        <ToolbarSeparator id="_IDGenToolbarSeparator1"  class="sapUiSmallMarginEnd"/>
                        <Input id="_IDGenInput4"  value="" liveChange="filterPressProject" showValueHelp="true" valueHelpIconSrc="sap-icon://filter" placeholder="Search by Project" width="16%" class="sapUiSmallMarginEnd" />
                        <ToolbarSeparator id="_IDGenToolbarSeparator2" class="sapUiSmallMarginEnd" />
                        <Input id="_IDGenInput5"  value="" liveChange="filterPressStatus" showValueHelp="true" valueHelpIconSrc="sap-icon://filter" placeholder="Search By Status" width="16%" class="sapUiSmallMarginEnd" />
                    </Toolbar>
                
                </headerToolbar>
                
                <columns >
                <Column id="_IDGenColumn1"><Text id="_IDGenText1" text="ID"  /></Column>
                <Column id="_IDGenColumn2"><Text id="_IDGenText2" text="Name"  /></Column>
                <Column id="_IDGenColumn3"><Text id="_IDGenText3" text="SAP Module"  /></Column>
                <Column id="_IDGenColumn4"><Text id="_IDGenText4" text="Mentor" /></Column>
                <Column id="_IDGenColumn5"><Text id="_IDGenText5" text="Project" /></Column>
                <Column id="_IDGenColumn6"><Text id="_IDGenText6" text="Billable Status" /></Column>
                <Column id="_IDGenColumn7"><Text id="_IDGenText7" text="Upgrade Plan" /></Column>
                </columns>

                <items>
                <ColumnListItem id="_IDGenColumnListItem" type="Inactive">
                    <cells>
                            <!-- ID / Group Title -->
                            <Text id="_IDGenText9"
                                text="{MasterModel>id}" />
 
                            <!-- Name -->
                            <Text id="_IDGenText10"
                                text="{MasterModel>name}" />
 
                            <!-- SAP Module -->
                            <Text id="_IDGenText11"
                                text="{MasterModel>sapmodule}" />
 
                            <!-- Mentor -->
                            <Text id="_IDGenText12"
                                text="{MasterModel>mentor}" />
 
                            <!-- Project -->
                            <Text id="_IDGenText13"
                                text="{MasterModel>project}" />
 
                            <!-- Billable Status -->
                            <Text id="_IDGenText26"
                                text="{MasterModel>billablestatus}" />
 
                            <!-- Button -->
                            <VBox id="_IDGenVBox3">
                                <Button id="_IDGenButton1"
                                    text="Upskills"
                                    type="Success"
                                    press="onUpgrade"
                                     />
                            </VBox>
                    </cells>
                </ColumnListItem>
                </items>
            </Table>
            </Panel>
    </Page>
</mvc:View>